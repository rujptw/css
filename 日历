	<script>
		var body = document.getElementById("body")
		body.onclick = function (ev) {
			var ev = ev || window.event;
			var target = ev.target || ev.srcElement;
			if (target.nodeName == "A") {
				target.style.color = "#fff";
				target.style.background = "#6a8db7";
				target.style.textShadow = "1px 1px 2px #22456b";
			}
		}
		body.ondblclick = function (ev) {
			var ev = ev || window.event;
			var target = ev.target || ev.srcElement;
			if (target.nodeName == "A") {
				target.style.color = "#333";
				target.style.background = "#c0c8d2";
 target.style.textShadow = "1px 1px 1px white";

			}
		}
	</script>

